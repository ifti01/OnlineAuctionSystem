@model AuctionSystem.Web.ViewModels.AuctionListingViewModel

<table class="table table-hover">
    <tr>
        <th>
            Title
        </th>
        <th>
            Category
        </th>
        <th>
            Description
        </th>
        <th>
            ActualAmount
        </th>
        <th>
            StartingTime
        </th>
        <th>
            EndTime
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Auctions)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Category.Name</td>
            <td>@item.Description</td>
            <td>@item.ActualAmount</td>
            <td>@item.StartingTime</td>
            <td>@item.EndTime</td>

            @*<td>
                    <input type="hidden" value="@item.ID" />
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActualAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartingTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>*@
            <td>
                <button data-id="@item.ID" class="editButton  btn btn-primary">Edit</button> |
                <button data-id="@item.ID" class="deleteButton  btn btn-danger">Delete</button>
            </td>
        </tr>
    }

</table>

@if (Model.Pager != null && Model.Pager.TotalPages > 0)
{
    <nav aria-label="Page navigation example">
        
        <ul class="pagination justify-content-center">
    @if (Model.Pager.CurrentPage == 1)
    {
    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
    }
    else
    {
    <li class="page-item">
        <a class="page-link" href="@Url.Action("Index","Auction",
                                                             new {pageNo = Model.Pager.CurrentPage-1 })">Previous</a>
    </li>
    }

    @for (int page = Model.Pager.StartPage; page < Model.Pager.EndPage; page++)
    {
        var active = page == Model.Pager.CurrentPage ? "active" : string.Empty;
        
        <li class="page-item @active"><a class="page-link" href="@Url.Action("Index","Auction",
                                                             new {pageNo = Page })">@page</a></li>
        
    }
    @if (Model.Pager.CurrentPage == Model.Pager.EndPage) 
    {
        <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
    }
    else
    {
        <li class="page-item"><a class="page-link" href="@Url.Action("Index", "Auction",
                                                             new { pageNo = Model.Pager.CurrentPage + 1})">Next</a></li>
    }
        </ul>
        </nav>
    }


<script>
    $(".editButton").click(function() {
        $.ajax({
            type: 'GET',
            url: '@Url.Action("Edit", "Auction")',
            data: {
                ID:$(this).attr("data-id")
            }
        }).done(function (response) {

            $("#formModal").modal("toggle");
            $("#contentArea").html(response);
        });
    });

    $(".deleteButton").click(function () {

        $("#deleteModal").modal("toggle");
        $("#modalDeleteBtn").attr("data-id", $(this).attr("data-id"));
    });
</script>

